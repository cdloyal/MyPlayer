<?xml version="1.0" encoding="utf-8"?>
<cd.myplayer.view.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="#ff3097fd">

    <ImageView
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_topbanner_logo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView

        android:layout_gravity="center_vertical"
        android:background="@drawable/search_bg_selector"
        android:drawablePadding="5dp"
        android:clickable="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/searche_left"
        android:id="@+id/tv_seache"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="全网搜索"
        android:textColor="@drawable/search_textcolro_selector"/>

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_game"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_topbanner_game"/>
        <ImageView
            android:layout_alignTop="@+id/tv_game"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/do_game"
            android:layout_alignRight="@+id/tv_game"/>
    </RelativeLayout>

    <Button
        android:id="@+id/iv_history"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_topbanner_record"/>

</cd.myplayer.view.TitleBar>