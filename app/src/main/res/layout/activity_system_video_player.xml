<?xml version="1.0" encoding="utf-8"?>
<cd.myplayer.view.VideoPlayer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center">

    <VideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <include android:id="@+id/rl_media_controller" layout="@layout/media_controller" />


    <include
        android:id="@+id/rl_loading"
        layout="@layout/loading"
        android:visibility="gone"/>

    <include
        android:id="@+id/ll_buffer"
        layout="@layout/buffer"
        android:visibility="gone"/>


</cd.myplayer.view.VideoPlayer>